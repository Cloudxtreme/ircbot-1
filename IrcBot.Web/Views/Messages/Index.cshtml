@{
    ViewBag.Title = "Messages";
}

<header id="topbar" class="alt">
    <div>
        <ol class="breadcrumb">
            <li class="crumb-active">
                <a href="/">Messages</a>
            </li>
            <li class="crumb-icon">
                <a href="/">
                    <span class="glyphicon glyphicon-home"></span>
                </a>
            </li>
            <li class="crumb-trail">Messages</li>
        </ol>
    </div>
</header>

<section id="content" class="animated fadeIn">

    <div class="alert alert-danger light" id="alert" style="display:none;">
        <i class="fa fa-info pr10"></i>
        <strong>Nothing found!</strong> Try selecting a larger time frame instead.
    </div>

    <div class="row">
            
        <div class="col-md-8">
                
            <div class="panel">
                <div class="panel-heading">
                    <span class="panel-icon">
                        <i class="fa fa-comment"></i>
                    </span>
                    <span class="panel-title">Messages</span>
                </div>
                <div class="panel-body pn">
                    <table class="table footable" data-page-navigation=".pagination" data-page-size="25" id="tableMessages">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nick</th>
                                <th>Message</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot class="footer-menu">
                            <tr>
                                <td colspan="4">
                                    <nav class="text-right">
                                        <ul class="pagination hide-if-no-paging"></ul>
                                    </nav>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
        
        <div class="col-md-4">

            <div class="panel">
                <div class="panel-heading">
                    <span class="panel-icon">
                        <i class="fa fa-calendar"></i>
                    </span>
                    <span class="panel-title">Select Time</span>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" id="formMessages">
                        <div class="form-group mt10">
                            <label class="col-md-3 control-label" for="inputStart">Start</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputStart">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="inputEnd">End</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEnd">
                            </div>
                        </div>
                        <button type="button" class="btn ladda-button btn-primary btn-block" data-style="zoom-in">
                            <span class="ladda-label">Go</span>
                            <span class="ladda-spinner"></span>
                        </button>
                    </form>
                </div>
            </div>
            
            <div class="panel" id="breakdown-widget" style="display:none;">
                <div class="panel-heading">
                    <span class="panel-icon">
                        <i class="fa fa-calendar"></i>
                    </span>
                    <span class="panel-title">Breakdown</span>
                </div>
                <div class="panel-body">
                    <div id="breakdown-pie" style="width: 100%; height: 210px; margin: 0 auto"></div>
                </div>
            </div>

        </div>

    </div>

</section>

@section PageStyles
{
    <link rel="stylesheet" type="text/css" href="~/content/vendor/footable/css/footable.core.min.css">
    <link rel="stylesheet" type="text/css" href="~/content/vendor/datepicker/css/bootstrap-datetimepicker.css" />
}

@section PageScripts
{
    <script src="~/content/vendor/moment/moment.min.js"></script>
    <script src="~/content/vendor/datepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/content/vendor/footable/js/footable.all.min.js"></script>
    <script src="~/content/vendor/highcharts/highcharts.js"></script>
    <script src="~/scripts/views/messages.js"></script>
}