@{
    ViewBag.Title = "Messages";
}

<header id="topbar" class="">
    <div>
        <ol class="breadcrumb">
            <li class="crumb-active">
                <a href="/">Dashboard</a>
            </li>
            <li class="crumb-icon">
                <a href="/">
                    <span class="glyphicon glyphicon-home"></span>
                </a>
            </li>
            <li class="crumb-trail">Messages</li>
        </ol>
    </div>
    <div class="topbar-right">
        <div class="ib topbar-dropdown">
            <label for="topbar-multiple" class="control-label pr10 fs11 text-muted">Reporting Period</label>
            <select id="topbar-multiple" class="">
                <optgroup label="Filter By:">
                    <option value="1-1" selected="selected">Today</option>
                    <option value="1-1">Yesterday</option>
                    <option value="1-1">Last 7 Days</option>
                    <option value="1-1">Last 30 Days</option>
                    <option value="1-2">Last 60 Days</option>
                    <option value="1-3">This Year</option>
                </optgroup>
            </select>
        </div>
    </div>
</header>

<section id="content" class="animated fadeIn">

    <div class="row">
            
        <div class="col-md-12">
                
            <div class="panel panel-widget calendar-widget calendar-alt" id="p02">
                <div class="panel-heading">
                    <span class="panel-icon">
                        <i class="fa fa-comment"></i>
                    </span>
                    <span class="panel-title"> Messages</span>
                </div>
                <div class="panel-body bg-white p15">
                    <div id="messages-widget"></div>
                </div>
            </div>

        </div>

    </div>

</section>

@section PageStyles
{
    <link rel="stylesheet" type="text/css" href="~/content/vendor/datatables/media/css/dataTables.bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/content/vendor/datatables/extensions/editor/css/dataTables.editor.css">
    <link rel="stylesheet" type="text/css" href="~/content/vendor/datatables/extensions/colreorder/css/dataTables.colReorder.min.css">
}

@section PageScripts
{
    <script src="~/scripts/views/messages.js"></script>
}